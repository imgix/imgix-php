  "version": "2.0.0",
  "tasks": [
    {
      "label": "composer: install",
      "type": "shell",
      "command": "composer",
      "args": ["install"],
      "group": "build"
    },
    {
      "label": "phpunit: test",
      "type": "shell",
      "command": "vendor/bin/phpunit",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
